@{
    ViewData["Title"] = "RSS Feed";
}
<div class="container px-4 py-3">
    <h2 class="d-flex w-100 justify-content-between pb-2 mb-3 border-bottom">
        <div>RSS Feed</div>
        <div>Subscribe Content</div>
    </h2>
    
    <div class="card" style="height: 25rem;">
        <div class="card-body">
            <div class="h-100 w-100 d-flex align-items-center">
                <div class="text-center w-100">
                    <h4 class="card-title">Subscription Address</h4>
                    <p class="card-text">@ViewBag.FeedUrl</p>
                    <p class="text-muted">Add the subscription address to your RSS reader</p>
                </div>
            </div>
        </div>
    </div>
</div>
