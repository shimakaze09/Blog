@using Contrib.Extensions
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 py-3">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/images/bootstrap/bootstrap-themes.png" class="d-block mx-lg-auto img-fluid"
                alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">My Blog</h1>
            <div class="lead">
                <p>One line poem: {{poemSimple}}</p>
                <p>A saying: {{hitokoto.hitokoto}}</p>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a class="btn btn-primary btn-lg px-4 me-md-2" asp-controller="Blog" asp-action="RandomPost">Read
                    Article</a>
                <a class="btn btn-outline-secondary btn-lg px-4">View Image</a>
            </div>
        </div>
    </div>
</div>

