<div class="container px-4 py-3">
    <h2 class="pb-2 border-bottom">Blog Posts</h2>

    @if (Model.TopPost != null)
    {
        <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
                <div class="display-6 fst-italic">@Model.TopPost.Title</div>
                <p class="lead my-3">@Model.TopPost.Summary</p>
                <p class="lead mb-0">
                    <a class="text-white fw-bold" asp-controller="Blog" asp-action="Post" asp-route-id="@Model.TopPost.Id">
                        Continue reading...
                    </a>
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="card p-4 p-md-5 mb-4">
            <div class="card-header">Featured Blog Post</div>
            <div class="card-body">
                <h3>Coming Soon!</h3>
            </div>
        </div>
    }

    @if (Model.FeaturedPosts != null)
    {
        @foreach (var row in Model.FeaturedPosts)
        {
            <div class="row mb-2">
                @foreach (var post in row)
                {
                    <div class="col-md-6">
                        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                            <div class="col p-4 d-flex flex-column position-static">
                                <strong class="d-inline-block mb-2 text-primary">@post.Category.Name</strong>
                                <h5 class="mb-0">@post.Title</h5>
                                <div class="mb-1 text-muted">@post.LastModifiedTime.ToString()</div>
                                <p class="card-text mb-auto">@post.Summary.Limit(50)</p>
                                <a class="stretched-link" asp-controller="Blog" asp-action="Post" asp-route-id="@post.Id">
                                    Continue reading
                                </a>
                            </div>
                            <div class="col-auto d-none d-lg-block">
                                <img class="bd-placeholder-img" src="https://picsum.photos/seed/@post.Id/200/250" alt="">
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="card mb-2">
            <div class="card-header">Recommended Blog Posts</div>
            <div class="card-body">
                <h3>Coming Soon!</h3>
            </div>
        </div>
    }
</div>

@section bottom {
    <script src="~/js/home.js"></script>
}
